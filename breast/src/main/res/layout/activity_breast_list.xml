<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_breast_header">

            <LinearLayout
                android:id="@+id/ll_breast_list_back"
                android:layout_width="100dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/back" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="今日解冻"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_big" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_thaw_list_search"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/search" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_breast_list_division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:text="病区：一病区"
                android:textSize="@dimen/txt_mid" />

            <TextView
                android:id="@+id/tv_breast_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="解冻人：某某某"
                android:textSize="@dimen/txt_mid" />

            <TextView
                android:id="@+id/tv_breast_list_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="8dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:text="已解冻：6"
                android:textSize="@dimen/txt_mid" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/bg_breast_header"
                android:gravity="center"
                android:text="床号"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_mid" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1.5"
                android:background="@color/bg_breast_header"
                android:gravity="center"
                android:text="患者姓名"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_mid" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1.5"
                android:background="@color/bg_breast_header"
                android:gravity="center"
                android:text="住院号"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_mid" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/bg_breast_header"
                android:gravity="center"
                android:text="总量"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_mid" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="0.8"
                android:background="@color/bg_breast_header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="解冻奶量"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/txt_mid" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="0.8"
                android:background="@color/bg_breast_header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="解冻瓶数"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/txt_mid" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:background="@color/bg_breast_header"
                android:gravity="center"
                android:text="解冻时间"
                android:textColor="@color/text_white"
                android:textSize="@dimen/txt_mid"
                android:visibility="gone" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_breast_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_updata"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_breast_header"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_updata_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您有数据需要上传"
            android:textColor="@color/text_white"
            android:textSize="@dimen/txt_big" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@mipmap/ic_arrow_upward" />

    </LinearLayout>

</RelativeLayout>