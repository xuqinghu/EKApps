<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tl"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            tl:tl_bar_color="#ffffff"
            tl:tl_indicator_color="#2C97DE"
            tl:tl_indicator_corner_radius="8dp"
            tl:tl_tab_padding="20dp" />

        <TextView
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="一病区"
            android:textColor="@color/text_red"
            android:textSize="@dimen/txt_big" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_receive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="签收人:高晓"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_receive_personCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="人数:0"
            android:textColor="@color/text_green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_receive_milkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="瓶数:0"
            android:textColor="@color/text_blue"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_receive_boxNo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/bg_breast_header"
            android:gravity="center"
            android:text="箱号"
            android:textColor="@color/text_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_receive_bedNo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/bg_breast_header"
            android:gravity="center"
            android:text="床位号"
            android:textColor="@color/text_white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="@color/bg_breast_header"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/text_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_receive_select_milk"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="@color/bg_breast_header"
            android:gravity="center"
            android:text="奶名"
            android:textColor="@color/text_white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/bg_breast_header"
            android:gravity="center"
            android:text="瓶数"
            android:textColor="@color/text_white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/bg_breast_header"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/text_white"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>