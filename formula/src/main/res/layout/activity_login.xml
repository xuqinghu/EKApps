<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_breast_header">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:text="配方奶系统"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/android_advice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设备名称"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text=" 设置"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/login_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/login_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46.69998dip"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usernametext"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="8.0dip"
                    android:text="工号："
                    android:textColor="#ff666666"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:maxLength="50"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="18.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.6700001dip"
                android:layout_marginTop="1.5dip"
                android:background="#ffcccccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46.69998dip"
                android:layout_marginTop="0.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8.0dip"
                    android:text="密码："
                    android:textColor="#ff666666"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:hint=""
                    android:maxLength="16"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="10.0dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:textColorHint="#ffbbbbbb"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="21.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="130.0dip"
                    android:layout_height="47.0dip"
                    android:layout_weight="1.0"
                    android:background="@color/bg_breast_header"
                    android:gravity="center"
                    android:text="登     录"
                    android:textColor="@color/text_white"
                    android:textSize="18.0dip" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>